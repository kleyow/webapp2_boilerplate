#transactions-sent
  -set transactions = current_profile.get_transactions_sent()
  -if transactions.count(limit=1)
    %table.compact-table.table
      %thead
        %tr
          %td Name
          %td Date
          %td Amount
          %td Status

      %tbody
        -for transaction in transactions.order('-created').fetch(5)
          %tr(class="#{transaction.status}")
            %td(data-title="Name")
              #{transaction.recipient.name}
            %td(data-title="Date")
              #{transaction.created|format_date()}
            %td(data-title="Amount")
              #{transaction.get_transaction_amount()}
            %td(data-title="Status")
              %a(data-modal="transaction-qr")
                #{transaction.status}
              -include 'modals/transaction_qr.haml'

  -else
    .empty
      %h3 No transactions sent.
