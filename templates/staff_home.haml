-extends "private_base.haml"

-set title = "Home"

-block content
  #home.container
    .row
      .span6.welcome
        %h2
          Welcome
          %span #{current_staff.get_short_name()}
          \!
      .span6.amount Tips Collected at #{current_staff.get_organization().name}
        %h5#usd-balance
          USD Balance:
          $#{"%.2f"|format(current_staff.usd_tip_balance/100.0)}
        %h5#jmd-balance
          JMD Balance:
          $#{"%.2f"|format(current_staff.jmd_tip_balance/100.0)}

      .span7.center: .table-section
        #accordion.accordion
          .accordion-group
            .accordion-heading
              %a.accordion-toggle(data-toggle="collapse")
                %h4 Recent Transactions Verified

            .accordion-body.collapse
              .accordion-inner
                -include "components/staff_transactions_verified_table.haml"
